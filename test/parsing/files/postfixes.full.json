{
    "$schema": "https://schema.linterhub.com/args.json",
    "$id": "https://hub.com",
    "$version": "1.0.0",
    "package": "",
    "description": "",
    "delimiter": "=",
    "allOf": [
        {
            "$ref": "https://schema.linterhub.com/schemaver.json"
        },
        {
            "$ref": "#/definitions/object"
        }
    ],
    "definitions": {
        "object": {
            "properties": {
                "--cwd": {
                    "description": "Working directory for files",
                    "type": "string",
                    "named": true,
                    "usage": "arg",
                    "default": null
                },
                "--stdin": {
                    "description": "Validate/fix code from stdin",
                    "type": "string",
                    "named": true,
                    "usage": "stdin",
                    "default": null
                },
                "--prettier": {
                    "description": "Conform to Prettier code style [default: true]",
                    "type": "string",
                    "named": true,
                    "usage": "arg",
                    "default": "true"
                },
                "--init": {
                    "description": "Add XO to your project",
                    "type": "string",
                    "named": true,
                    "usage": "arg",
                    "default": null
                },
                "--fix": {
                    "description": "Automagically fix issues",
                    "type": "string",
                    "named": true,
                    "usage": "arg",
                    "default": null
                },
                "--plugin": {
                    "description": "Include third-party plugins [Can be set multiple times]",
                    "type": "string",
                    "named": true,
                    "usage": "arg",
                    "default": null
                }
            }
        }
    }
}
