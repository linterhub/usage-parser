{
    "arguments": [
        {
            "name": "--help",
            "type": null,
            "description": "Display this help text",
            "flag": true,
            "alias": "-h",
            "usage": "help"
        },
        {
            "name": "--quiet",
            "type": null,
            "description": "Reduce output to errors only",
            "flag": true,
            "alias": "-q"
        },
        {
            "name": "--version",
            "type": null,
            "description": "Print the version",
            "flag": true,
            "alias": "-v",
            "usage": "version"
        },
        {
            "name": "--exclude",
            "type": "string",
            "description": "File exclusion regex",
            "flag": false,
            "alias": "-x"
        },
        {
            "name": "--dir",
            "type": "string",
            "description": "The output directory",
            "flag": false,
            "alias": "-d"
        },
        {
            "name": "--recurse",
            "type": null,
            "description": "Recursively search directories",
            "flag": true,
            "alias": "-r"
        },
        {
            "name": "--jshint",
            "type": "string",
            "description": "Specify a jshintrc file for JSHint linting",
            "flag": false,
            "alias": "-l"
        },
        {
            "name": "--eslint",
            "type": "string",
            "description": "Specify a eslintrc file for ESLint linting",
            "flag": false,
            "alias": "-e"
        },
        {
            "name": "--title",
            "type": "string",
            "description": "Title of the report",
            "flag": false,
            "alias": "-t"
        },
        {
            "name": "--date",
            "type": "string",
            "description": "Time to use as the report date (seconds, > 9999999999 assumed to be ms)",
            "flag": false,
            "alias": "-D"
        },
        {
            "name": "--noempty",
            "type": null,
            "description": "Skips empty lines from line count",
            "flag": true,
            "alias": "-n"
        }
    ],
    "delimiter": "="
}
