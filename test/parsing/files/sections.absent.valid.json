{
    "$schema": "https://repometric.github.io/linterhub/schema/args.json",
    "name": "",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/arguments"
        }
    ],
    "delimiter": "=",
    "definitions": {
        "arguments": {
            "type": "object",
            "properties": {
                "--help": {
                    "id": "linterhub:help",
                    "type": "null",
                    "description": "Display this help text"
                },
                "--quiet": {
                    "id": "--quiet",
                    "type": "string",
                    "description": "Reduce output to errors only"
                },
                "--version": {
                    "id": "linterhub:version",
                    "type": "null",
                    "description": "Print the version"
                },
                "--exclude": {
                    "id": "args:--exclude",
                    "type": "string",
                    "description": "File exclusion regex"
                },
                "--dir": {
                    "id": "args:--dir",
                    "type": "string",
                    "description": "The output directory"
                },
                "--recurse": {
                    "id": "--recurse",
                    "type": "string",
                    "description": "Recursively search directories"
                },
                "--jshint": {
                    "id": "args:--jshint",
                    "type": "string",
                    "description": "Specify a jshintrc file for JSHint linting"
                },
                "--eslint": {
                    "id": "args:--eslint",
                    "type": "string",
                    "description": "Specify a eslintrc file for ESLint linting"
                },
                "--title": {
                    "id": "args:--title",
                    "type": "string",
                    "description": "Title of the report"
                },
                "--date": {
                    "id": "args:--date",
                    "type": "string",
                    "description": "Time to use as the report date (seconds, > 9999999999 assumed to be ms)"
                },
                "--noempty": {
                    "id": "--noempty",
                    "type": "string",
                    "description": "Skips empty lines from line count"
                }
            }
        },
        "section": {
            "type": "object",
            "description": "The engine configuration section",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The engine name",
                    "enum": ""
                },
                "options": {
                    "type": "object",
                    "description": "The engine configuration",
                    "$ref": "#/definitions/arguments"
                }
            }
        }
    }
}
